# Database Configuration (used by config.py -> Config.DB_CONFIG)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
# Note: current code uses database name 'cv' by default
DB_NAME=cv

# Job API Keys (optional; used in config.py and api_services.py)
# Leave blank to disable these features.
JOOBLE_API_KEY=
ADZUNA_APP_ID=
ADZUNA_API_KEY=
# Country code for Adzuna (e.g., in, us, uk)
ADZUNA_COUNTRY=in

# Local Chat (optional; used by chat_service.py)
# Do NOT include trailing '/api' or a trailing slash in OLLAMA_HOST
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=phi:latest

# UI/Theme (optional; referenced by the app if you choose to use it)
# DEFAULT_THEME=dark
